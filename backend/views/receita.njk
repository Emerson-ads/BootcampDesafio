{% extends "layout.njk" %}
    {% block head %}
        <title>FoodFy</title>
        <link rel="stylesheet" href="style.css">
    {% endblock %}

    {% block content %}
        <section class="content">
            {% for item in items %}      
                <div class="cards" id="{{loop.index0}}">
                    <img src="{{item.image}}" alt="{{item.title}}">

                    <div class="info">
                        <h6>{{item.title}}</h6>
                        <p>{{item.author}}</p>
                    </div>
                </div> 
            {% endfor %}
        </section>
        
    {% endblock %}
      