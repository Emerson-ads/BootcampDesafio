{% extends "layout.njk" %}
 {% block head %}
    <title> Home </title>
    <link rel="stylesheet" href="stylehome.css">
 {% endblock%}
        
    {% block content %}
        <div id="banner">
            <h1>As Melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro
            </p>
            <img  src="/assets/chef.png" alt="chef">
        </div>

       
        <section id="content">
           
            {% for item in items %}
            <div class="cards" id="{{loop.index0}}">
                <img src="{{item.image}}" alt="{{item.title}}">
                    <h6>{{item.title}}</h6>
                    <p>{{item.author}}</p>
                
            </div>

            {% endfor %}
        </section>
        
    {% endblock %}